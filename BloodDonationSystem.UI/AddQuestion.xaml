<Window x:Class="BloodDonationSystem.UI.AddQuestionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="New Question" Height="200" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize" Background="#E3F2FD">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Enter new question:"
                       FontWeight="SemiBold" FontSize="16" Foreground="DarkBlue"/>
            <TextBox x:Name="QuestionBox"
                     Margin="0 10 0 10"
                     FontSize="14" Height="60"
                     TextWrapping="Wrap" AcceptsReturn="True"/>
            <Button Content="Save"
                    Height="35"
                    Background="#1976D2"
                    Foreground="White"
                    FontWeight="Bold"
                    Click="Save_Click"/>
        </StackPanel>
    </Grid>
</Window>
