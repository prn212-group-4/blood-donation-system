<Window x:Class="BloodDonationSystem.UI.MemberAnswerQuestion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Answer Questions"
        Height="500" Width="700"
        WindowStartupLocation="CenterScreen"
        Background="#E3F2FD">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20">
            <StackPanel>
                <TextBlock Text="🧾 Please answer the following questions:"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="DarkBlue"
                           Margin="0 0 0 20"/>

                <StackPanel x:Name="QuestionContainer" />

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 30 0 0">
                    <Button Content="Cancel"
                            Width="100"
                            Margin="0 0 10 0"
                            Background="Gray"
                            Foreground="White"
                            Click="Cancel_Click"/>
                    <Button Content="Submit"
                            Width="100"
                            Background="#1976D2"
                            Foreground="White"
                            FontWeight="Bold"
                            Click="Submit_Click"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Window>
