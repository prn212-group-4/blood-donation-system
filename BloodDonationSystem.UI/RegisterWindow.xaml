<Window x:Class="BloodDonationSystem.UI.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Register"
        Height="700" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#FFF5F5F5"
        ResizeMode="NoResize">

    <Window.Resources>
        <DropShadowEffect x:Key="DropShadow" BlurRadius="15" ShadowDepth="3" Color="#888"/>
    </Window.Resources>

    <Grid>
        <Border Width="620" Height="520"
                Background="White"
                CornerRadius="15"
                Padding="30"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Effect="{StaticResource DropShadow}">

            <StackPanel>
                <TextBlock Text="Create Your Account"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="#C62828"
                           HorizontalAlignment="Center"
                           Margin="0 0 0 20"/>

                <Grid Margin="0 0 0 10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Full Name -->
                    <StackPanel Grid.Row="0" Grid.Column="0" Margin="5">
                        <TextBlock Text="Full Name" FontSize="14" Foreground="#555"/>
                        <TextBox x:Name="NameTextBox" Padding="8" Background="#FAFAFA" BorderBrush="#DDD"/>
                    </StackPanel>

                    <!-- Email -->
                    <StackPanel Grid.Row="0" Grid.Column="1" Margin="5">
                        <TextBlock Text="Email" FontSize="14" Foreground="#555"/>
                        <TextBox x:Name="EmailTextBox" Padding="8" Background="#FAFAFA" BorderBrush="#DDD"/>
                    </StackPanel>

                    <!-- Password -->
                    <StackPanel Grid.Row="1" Grid.Column="0" Margin="5">
                        <TextBlock Text="Password" FontSize="14" Foreground="#555"/>
                        <PasswordBox x:Name="PasswordBox" Padding="8" Background="#FAFAFA" BorderBrush="#DDD"/>
                    </StackPanel>

                    <!-- Phone -->
                    <StackPanel Grid.Row="1" Grid.Column="1" Margin="5">
                        <TextBlock Text="Phone" FontSize="14" Foreground="#555"/>
                        <TextBox x:Name="PhoneTextBox" Padding="8" Background="#FAFAFA" BorderBrush="#DDD"/>
                    </StackPanel>

                    <!-- Gender -->
                    <StackPanel Grid.Row="2" Grid.Column="0" Margin="5">
                        <TextBlock Text="Gender" FontSize="14" Foreground="#555"/>
                        <ComboBox x:Name="GenderComboBox" Padding="6" Background="#FAFAFA" BorderBrush="#DDD">
                            <ComboBoxItem Content="Male"/>
                            <ComboBoxItem Content="Female"/>
                            <ComboBoxItem Content="Other"/>
                        </ComboBox>
                    </StackPanel>

                    <!-- Birthday -->
                    <StackPanel Grid.Row="2" Grid.Column="1" Margin="5">
                        <TextBlock Text="Birthday" FontSize="14" Foreground="#555"/>
                        <DatePicker x:Name="BirthdayPicker" Padding="6" Background="#FAFAFA" BorderBrush="#DDD"/>
                    </StackPanel>

                    <!-- Address -->
                    <StackPanel Grid.Row="3" Grid.ColumnSpan="2" Margin="5">
                        <TextBlock Text="Address" FontSize="14" Foreground="#555"/>
                        <TextBox x:Name="AddressTextBox" Padding="8" Background="#FAFAFA" BorderBrush="#DDD"/>
                    </StackPanel>

                    <!-- Blood Group -->
                    <StackPanel Grid.Row="4" Grid.ColumnSpan="2" Margin="5">
                        <TextBlock Text="Blood Group" FontSize="14" Foreground="#555"/>
                        <ComboBox x:Name="BloodGroupComboBox" Padding="6" Background="#FAFAFA" BorderBrush="#DDD">
                            <ComboBoxItem Content="O+"/>
                            <ComboBoxItem Content="O-"/>
                            <ComboBoxItem Content="A+"/>
                            <ComboBoxItem Content="A-"/>
                            <ComboBoxItem Content="B+"/>
                            <ComboBoxItem Content="B-"/>
                            <ComboBoxItem Content="AB+"/>
                            <ComboBoxItem Content="AB-"/>
                        </ComboBox>
                    </StackPanel>
                </Grid>

                <!-- Register Button -->
                <Button Content="Register"
                        Click="RegisterButton_Click"
                        Background="#C62828" Foreground="White"
                        FontSize="16" FontWeight="Bold"
                        Height="40" Margin="0 20 0 10"
                        BorderThickness="0" Width="160"
                        HorizontalAlignment="Center"
                        Cursor="Hand"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
