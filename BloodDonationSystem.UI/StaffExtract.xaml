<Window x:Class="BloodDonationSystem.UI.StaffExtract"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Staff Extract Blood"
        Height="700" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">

    <Grid>
        <StackPanel Margin="30">
            <TextBlock Text="🧪 Extract Blood Components"
                       FontSize="26"
                       FontWeight="SemiBold"
                       Foreground="#2E7D32"
                       Margin="0 0 0 30"/>

            <ItemsControl x:Name="DonationList">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#DDD" BorderThickness="1" CornerRadius="10" Margin="0 10" Background="White" Padding="15">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel>
                                    <TextBlock Text="{Binding MemberName}" FontSize="18" FontWeight="Bold" Foreground="#C62828"/>
                                    <TextBlock Text="{Binding DonationTypeName}" FontSize="14" Foreground="Gray"/>
                                    <TextBlock Text="{Binding Amount, StringFormat={}{0} ml}" FontSize="14" Foreground="#555"/>

                                    <TextBlock Text="{Binding CreatedAtFormatted}" FontSize="12" Foreground="#888"/>
                                </StackPanel>

                                <Button Content="🔍 View Detail"
                                        Grid.Column="1"
                                        Width="120" Height="40"
                                        Background="#1565C0" Foreground="White"
                                        Margin="10 0 0 0"
                                        Tag="{Binding DonationId}"
                                        Click="ViewDetail_Click"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
    </Grid>
</Window>
