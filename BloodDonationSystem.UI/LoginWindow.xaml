<Window x:Class="BloodDonationSystem.UI.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login"
        Height="600" Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F0F0F0">
    
    <Grid>
        <Border Width="540"
                Height="520"
                Background="White"
                CornerRadius="15"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Padding="30"
                Effect="{DynamicResource DropShadow}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

                <TextBlock Text="BLOOD DONATION SYSTEM"
                           FontSize="30" FontWeight="SemiBold"
                           Foreground="#C62828" TextAlignment="Center"
                           HorizontalAlignment="Center"
                           Margin="0 0 0 40"/>

                <StackPanel Margin="0 15">
                    <TextBlock Text="Email" FontSize="14" Foreground="#555" Margin="5 5"/>
                    <TextBox x:Name="EmailTextBox"
                             Text="abc@gmail.com"
                             FontSize="14"
                             Foreground="Gray"
                             Padding="10"
                             Background="#FAFAFA"
                             BorderBrush="#DDD" BorderThickness="1"
                             GotFocus="EmailTextBox_GotFocus"
                             LostFocus="EmailTextBox_LostFocus"/>
                </StackPanel>

                <StackPanel Margin="0 15">
                    <TextBlock Text="Password" FontSize="12" Foreground="#555" Margin="5 5"/>
                    <PasswordBox x:Name="PasswordBox"
                                 FontSize="15"
                                 Padding="10"
                                 Background="#FAFAFA"
                                 BorderBrush="#DDD" BorderThickness="1"/>
                </StackPanel>

                <Button Content="Login"
                        Click="LoginButton_Click"
                        Background="#C62828" Foreground="White"
                        FontSize="14" FontWeight="Bold"
                        Height="40" Margin="0 40 0 15"
                        BorderThickness="0"
                        Cursor="Hand" />

                <TextBlock Text="Don't have an account? Register here"
                           FontSize="12"
                           Foreground="#888"
                           TextAlignment="Center"
                           HorizontalAlignment="Center"
                           Cursor="Hand"
                           MouseDown="RegisterText_MouseDown"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
