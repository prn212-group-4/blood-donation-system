<Window x:Class="BloodDonationSystem.UI.StaffWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="Staff Panel"
        Height="720" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#FAFAFA"
        ResizeMode="CanResize">

    <Window.Resources>
        <DropShadowEffect x:Key="DropShadow" BlurRadius="15" ShadowDepth="4" Color="#888" Opacity="0.3"/>

        <Style x:Key="CardButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Height" Value="90"/>
            <Setter Property="Width" Value="230"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Border Background="White"
                Margin="40"
                CornerRadius="15"
                Padding="40"
                Effect="{StaticResource DropShadow}">

            <StackPanel HorizontalAlignment="Center">

                <!-- Câu chào -->
                <TextBlock x:Name="WelcomeText"
                           Text="👋 Welcome back, Staff!"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="#D32F2F"
                           HorizontalAlignment="Center"
                           Margin="0 0 0 10"/>

                <!-- Tiêu đề -->
                <TextBlock Text="Blood Donation Staff Control Panel"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="#C62828"
                           HorizontalAlignment="Center"
                           Margin="0 0 0 10"/>

                <!-- Mô tả nhỏ -->
                <TextBlock Text="Manage daily operations, appointments, and donations smoothly."
                           FontSize="14"
                           Foreground="#777"
                           HorizontalAlignment="Center"
                           Margin="0 0 0 30"/>

                <!-- Layout các nút điều hướng -->
                <StackPanel>
                    <!-- Hàng đầu tiên: 3 nút -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Border Background="#EC407A" CornerRadius="12" Margin="10">
                            <Button Style="{StaticResource CardButtonStyle}"
                                    Content="➕  Create Blood Request"
                                    Click="CreateBloodRequest_Click"/>
                        </Border>

                        <Border Background="#42A5F5" CornerRadius="12" Margin="10">
                            <Button Style="{StaticResource CardButtonStyle}"
                                    Content="🧠  Question Management"
                                    Click="ManageQuestion_Click"/>
                        </Border>

                        <Border Background="#66BB6A" CornerRadius="12" Margin="10">
                            <Button Style="{StaticResource CardButtonStyle}"
                                    Content="📅  Appointment"
                                    Click="ManageAppointment_Click"/>
                        </Border>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 10 0 0">
                        <Border Background="#FF7043" CornerRadius="12" Margin="10">
                            <Button Style="{StaticResource CardButtonStyle}"
                                    Content="🧪  Blood Extract"
                                    Click="ExtractBlood_Click"/>
                        </Border>

                        <Border Background="#AB47BC" CornerRadius="12" Margin="10">
                            <Button Style="{StaticResource CardButtonStyle}" Click="ViewBloodStorage_Click">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <Viewbox Width="20" Height="20" Margin="0 0 10 0">
                                        <Canvas Width="24" Height="24">
                                            <Path Fill="White"
                          Data="M12,2 C12,2 6,9.5 6,14 C6,17.31 8.69,20 12,20 C15.31,20 18,17.31 18,14 C18,9.5 12,2 12,2 Z"/>
                                        </Canvas>
                                    </Viewbox>
                                    <TextBlock Text="View Blood Storage" VerticalAlignment="Center" />
                                </StackPanel>
                            </Button>
                        </Border>
                    </StackPanel>
                </StackPanel>
                
                <TextBlock x:Name="CurrentTimeText"
                           FontSize="12"
                           Foreground="#999"
                           Margin="0 30 0 0"
                           HorizontalAlignment="Center"/>

            </StackPanel>
        </Border>
    </Grid>
</Window>
