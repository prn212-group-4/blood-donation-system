<Window x:Class="BloodDonationSystem.UI.CreateBloodRequest"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create Blood Request"
        Width="1000" Height="750"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#FAFAFA">

    <Grid Margin="40">
        <Border Background="White" CornerRadius="12" Padding="40"
                Effect="{DynamicResource DropShadow}">
            <StackPanel>

                <!-- Tiêu đề -->
                <StackPanel Margin="0 0 0 30">
                    <TextBlock FontSize="28" FontWeight="Bold" Foreground="#D32F2F">
                        🩸 Request Blood
                    </TextBlock>
                    <TextBlock FontSize="14" Foreground="#666" Margin="0 10 0 0"
                               TextWrapping="Wrap">
                        Please fill out this form to request blood for medical purposes. All requests will be reviewed by the medical team.
                    </TextBlock>
                </StackPanel>

                <!-- Nội dung form -->
                <Grid Margin="0 0 0 30">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="50" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- Left Column -->
                    <StackPanel Grid.Column="0">
                        <!-- Title -->
                        <TextBlock Text="Title" FontWeight="SemiBold" FontSize="16"/>
                        <TextBox x:Name="TitleBox" Margin="0 8 0 20" FontSize="14" Padding="10"/>

                        <!-- Blood Group -->
                        <TextBlock Text="Blood Group" FontWeight="SemiBold" FontSize="16"/>
                        <ComboBox x:Name="BloodGroupBox" Margin="0 8 0 20" FontSize="14" Padding="8">
                            <ComboBoxItem Content="O+" />
                            <ComboBoxItem Content="O-" />
                            <ComboBoxItem Content="A+" />
                            <ComboBoxItem Content="A-" />
                            <ComboBoxItem Content="B+" />
                            <ComboBoxItem Content="B-" />
                            <ComboBoxItem Content="AB+" />
                            <ComboBoxItem Content="AB-" />
                        </ComboBox>

                        <!-- Max People -->
                        <TextBlock Text="Max People" FontWeight="SemiBold" FontSize="16"/>
                        <TextBox x:Name="MaxPeopleBox" Margin="0 8 0 20" FontSize="14" Padding="10" Text="1"/>
                    </StackPanel>

                    <!-- Right Column -->
                    <StackPanel Grid.Column="2">
                        <!-- Priority -->
                        <TextBlock Text="Priority" FontWeight="SemiBold" FontSize="16"/>
                        <ComboBox x:Name="PriorityBox" Margin="0 8 0 20" FontSize="14" Padding="8">
                            <ComboBoxItem Content="Low" />
                            <ComboBoxItem Content="Medium" />
                            <ComboBoxItem Content="High" />
                        </ComboBox>

                        <!-- Start Date -->
                        <TextBlock Text="Start Date" FontWeight="SemiBold" FontSize="16"/>
                        <StackPanel Orientation="Horizontal" Margin="0 8 0 20">
                            <DatePicker x:Name="StartDatePicker" Width="180" FontSize="14"/>
                            <TextBox x:Name="StartTimeBox" Width="120" Margin="10 0 0 0"
                                     FontSize="14" Text="10:00 AM" Padding="6"/>
                        </StackPanel>

                        <!-- End Date -->
                        <TextBlock Text="End Date" FontWeight="SemiBold" FontSize="16"/>
                        <StackPanel Orientation="Horizontal" Margin="0 8 0 20">
                            <DatePicker x:Name="EndDatePicker" Width="180" FontSize="14"/>
                            <TextBox x:Name="EndTimeBox" Width="120" Margin="10 0 0 0"
                                     FontSize="14" Text="10:00 AM" Padding="6"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>

                <!-- Nút điều hướng -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="← Back"
                            Width="120" Height="40"
                            Background="#E0E0E0" Foreground="Black"
                            FontSize="14" Margin="0 0 10 0"
                            Click="BackButton_Click"/>

                    <Button Content="Submit Request"
                            Width="160" Height="40"
                            Background="#D32F2F" Foreground="White"
                            FontWeight="Bold" FontSize="14"
                            Click="SubmitRequest_Click"/>
                </StackPanel>

            </StackPanel>
        </Border>
    </Grid>
</Window>
