<Window x:Class="BloodDonationSystem.UI.StaffReview"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Review Appointment"
        Height="500" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20" x:Name="QuestionAnswerPanel">
            <TextBlock Text="🧾 Review Appointment"
                       FontSize="24"
                       FontWeight="SemiBold"
                       Foreground="#C62828"
                       Margin="0 0 0 20"/>
            <!-- Các câu hỏi và câu trả lời sẽ được add ở đây bằng code-behind -->

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 30 0 0">
                <Button Content="✅ Approve"
                        Width="120" Height="40"
                        Background="ForestGreen"
                        Foreground="White"
                        FontWeight="Bold"
                        Margin="10"
                        Click="Approve_Click"/>
                <Button Content="❌ Reject"
                        Width="120" Height="40"
                        Background="Firebrick"
                        Foreground="White"
                        FontWeight="Bold"
                        Margin="10"
                        Click="Reject_Click"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Window>
