<Window x:Class="BloodDonationSystem.UI.QuestionManagement"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BloodDonationSystem.UI"
        mc:Ignorable="d"
        Title="QuestionManagement" Height="450" Width="800">
    <Grid Background="#E3F2FD">
        <Border Margin="20" Background="White" CornerRadius="10" Padding="20" 
            Effect="{DynamicResource DropShadow}">
            <DockPanel>
                <!-- Tiêu đề -->
                <TextBlock Text="❓ Question Management"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="#1976D2"
                       DockPanel.Dock="Top"
                       Margin="0 0 0 10"/>

                <!-- Nút thêm -->
                <Button Content="➕ Add Question"
                    Width="150"
                    Height="35"
                    Background="#1976D2"
                    Foreground="White"
                    FontWeight="Bold"
                    Click="AddQuestion_Click"
                    DockPanel.Dock="Top"
                    Margin="0 0 0 10"
                    HorizontalAlignment="Left"/>

                <!-- Danh sách câu hỏi -->
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="QuestionList" />
                </ScrollViewer>
            </DockPanel>
        </Border>
    </Grid>
</Window>
