<Window x:Class="BloodDonationSystem.UI.MemberWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Member Panel"
        Height="700" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5"
        ResizeMode="CanResize">

    <Grid>
        <Border Background="White"
                Margin="40"
                CornerRadius="10"
                Padding="40"
                Effect="{DynamicResource DropShadow}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="Welcome to the Blood Donation System!"
                           FontSize="24"
                           FontWeight="SemiBold"
                           Foreground="#C62828"
                           TextAlignment="Center"
                           TextWrapping="Wrap"
                           Margin="0 10"/>
                <TextBlock Text="We're glad to have you here."
                           FontSize="16"
                           Foreground="#555"
                           TextAlignment="Center"
                           Margin="0 5"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
